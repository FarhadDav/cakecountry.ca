<script>
        const imgs = document.querySelectorAll('.carousel-img');
        let idx = 0;
        showImg(idx);
        function showImg(i) {
            imgs.forEach((img, j) => {
                img.classList.toggle('active', j === i);
            });
        }
        function nextImg() {
            idx = (idx + 1) % imgs.length;
            showImg(idx);
        }
        function prevImg() {
            idx = (idx - 1 + imgs.length) % imgs.length;
            showImg(idx);
        }
        document.querySelector('.carousel-btn.prev').onclick = () => {
            prevImg();
            resetAutoScroll();
        };
        document.querySelector('.carousel-btn.next').onclick = () => {
            nextImg();
            resetAutoScroll();
        };

        let autoScroll = setInterval(nextImg, 3000);
        function resetAutoScroll() {
            clearInterval(autoScroll);
            autoScroll = setInterval(nextImg, 3000);
        }
    </script>
